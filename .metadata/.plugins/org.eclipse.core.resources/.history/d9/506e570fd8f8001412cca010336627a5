package hr.fer.zemris.java.gui.calc.buttons;

import javax.swing.JButton;

public abstract class FunctionButton extends JButton {
	
	private String name;
	private String nameInverted;
	private boolean inverted;
	
	public FunctionButton(String name, String nameInverted) {
		this.name = name;
		this.nameInverted = nameInverted;
	}
	
	public abstract double apply(double number);
	public abstract double invertedApply(double number);

	public void setInverted(boolean inverted) {
		this.inverted = inverted;
	}
	
}
